@page
@model IndexModel
@{
    ViewData["Title"] = "صفحه اصلی";
}

<div class="col-12 mb-3">
    <div class="row">
        <div class="border-bottom col-3 ml-auto mr-auto text-center">
            <h2>تازه ترین مقالات</h2>
        </div>
    </div>
</div>

@foreach (var article in Model.Articles)
{
    <div class="col-4 mb-2">
        <div class="card">
            <img src="@article.Picture" class="card-img-top" alt="@article.PictureALT" title="@article.PictureTitle">
            <div class="card-body">
                <h5 class="card-title">@article.Title</h5>
                <p class="card-text">
                    @article.ShortDescription
                </p>
                <a asp-page="./ArticleDetails"
                   asp-route-id="@article.Id"
                   class="btn btn-primary">ادامه مطلب</a>

                <a asp-page-handler="Deleted" asp-route-id="@article.Id" class="btn btn-danger">حذف</a>
            </div>
        </div>
    </div>
}

